
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="" method="post">


    Product Name:
    <input type="text" name="PName" placeholder="Enter the product name" value="@Model.PName" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("PName")</span>
    <br />


    Product Id:
    <input type="text" name="PId" placeholder="Enter the product id" value="@Model.PId" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("PId")</span>
    <br />


    Product Description:
    <input type="text" name="PDescription" placeholder="Enter the product details" value="@Model.PDescription" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("PDescription")</span>
    <br />



    <input type="submit" value="Save Changes" class="btn btn-success" />
</form>
